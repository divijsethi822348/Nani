<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GetStartedActivity"
    android:orientation="vertical"
    android:weightSum="5.5">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:id="@+id/get_started_pager">

    </android.support.v4.view.ViewPager>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dots"
            android:gravity="center"
            android:orientation="horizontal"
            >

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Who are you?"
            android:textColor="#000"
            android:textSize="18sp"
            android:id="@+id/whoru_get_started"
            android:layout_below="@+id/dots"
            android:fontFamily="@font/open_sans"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nani"
            android:layout_below="@+id/whoru_get_started"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/nani_button_get_started"
            android:textAllCaps="false"
            android:background="@drawable/orange_stroke_button"
            android:textColor="#fd6038"
            android:fontFamily="@font/open_sans"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer"
            android:layout_below="@+id/whoru_get_started"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/buyer_button_get_started"
            android:textAllCaps="false"
            android:textColor="#fd6038"
            android:background="@drawable/orange_stroke_button"
            android:fontFamily="@font/open_sans"/>

    </RelativeLayout>
</LinearLayout>